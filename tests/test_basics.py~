# -*- coding:utf-8 -*-
import unittest
from flask import current_app
from app import create_app,db

class BasicsTestCase(unittest.TestCase):
	def setUp(self):
		self.app = create_app('testing')
		self.app_context = self.app.app_context()
		self.app_context.push() #only can do sth when the request is exist
		db.create_all()		#so you must push the app_context by yourself
